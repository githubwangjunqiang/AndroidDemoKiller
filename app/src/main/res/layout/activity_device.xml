<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.max.tang.demokiller.activity.DeviceActivity"
    >

  <Button
      android:text="@string/open_location_setting"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/openLocationSetting"
      android:onClick="openLocationSetting"
      />
  <Button
      android:text="@string/open_privacy_settings"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/button3"
      android:onClick="openPrivacySettings"
      />
  <Button
      android:text="@string/get_language_code"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/button4"
      android:onClick="getLanguageCode"
      />


  <Button
      android:text="@string/enable_location_service"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="enableLocationService"
      />
</LinearLayout>
