<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tang="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_custom_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.max.tang.demokiller.activity.CustomViewActivity"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <com.max.tang.demokiller.view.RoundImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:src="@drawable/product_logo"
          app:type="circle"
          android:visibility="gone"
          />
      <com.max.tang.demokiller.mygithub.view.GaugeView
          android:id="@+id/gaugeView"
          android:layout_width="202dp"
          android:layout_height="132dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <com.max.tang.demokiller.view.CircularIndicatorView
            android:id="@+id/circularView"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@color/secondary_text"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            tang:color1="@color/colorBad"
            tang:color2="@color/colorPoor"
            />
        <com.max.tang.demokiller.view.CircleGradientProgressbar
            android:id="@+id/circle_gradient_bar"
            android:background="@color/secondary_text"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            />


      </LinearLayout>
      <SeekBar
          android:id="@+id/seek_bar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:max="100"
          />

    </LinearLayout>
  </ScrollView>
</LinearLayout>
